<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4.33dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10.00dp"
        android:layout_marginLeft="8.67dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_zeker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="76.00dp"
                    android:layout_marginTop="16.33dp"
                    android:layout_marginRight="76.00dp"
                    android:layout_marginBottom="12.33dp"
                    android:fontFamily="@font/jfflat_regular"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#5774f2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_numOfDoaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="148.00dp"
                    android:layout_marginRight="148.00dp"
                    android:layout_marginBottom="17.00dp"
                    android:fontFamily="@font/jfflat_regular"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#da8bff"
                    android:textSize="@dimen/textsize_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f7f7f7"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_add_to_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.67dp"

                    android:layout_marginRight="6.33dp"
                    android:layout_marginBottom="13.33dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jfflat_regular"
                    android:gravity="start"
                    android:text="TextView"
                    android:textColor="#878787" />

                <ImageView
                    android:id="@+id/favourite_icon"
                    android:layout_width="14.00dp"
                    android:layout_height="14.00dp"

                    android:layout_marginTop="15.00dp"
                    android:layout_marginRight="10.67dp"
                    android:layout_marginBottom="12.33dp"
                    android:background="@drawable/like_grey"
                    />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>